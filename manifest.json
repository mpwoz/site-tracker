{
  "manifest_version": 2,

  "name": "Site tracker",
  "description": "This extension tracks which sites you visit.",
  "version": "1.0",

  "permissions": [
    "tabs", "<all_urls>", "storage", "webNavigation", "history"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },

