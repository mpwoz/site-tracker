{
  "manifest_version": 2,

  "name": "Site tracker",
  "description": "This extension tracks which sites you visit.",
  "version": "1.0",

  "background": {
    "matches": ["*"], // required to tell it which pages to inject into
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "js": ["contentScript.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
