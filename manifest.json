{
  "manifest_version": 2,

  "name": "Site tracker",
  "description": "This extension tracks which sites you visit.",
  "version": "1.0",

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      // required to tell it which pages to inject into
      "matches": [
        "http://*/*",
        "https://*/*"
      ], 
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
